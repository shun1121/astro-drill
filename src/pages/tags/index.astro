---
const allPosts = await Astro.glob('../blog/*.md')
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())]
---

<html lang="ja">
<head>
	<meta charset="UTF-8">
	<title>タグページ</title>
</head>
<body>
	<h1>タグページ</h1>
	<nav>
		<ul>
			{tags.map((tag) => (
				<li><a href={tag}>{tag}</a></li>
			))}
		</ul>
	</nav>
</body>
</html>
